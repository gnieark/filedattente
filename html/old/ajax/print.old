function usdate($d) {
    //on split sur le slash
    $D = explode('/',$d);
    //si 3 parties on reformat au format yyyymmdd
    if (count($D)==3){
        $dateUs = $D[2].$D[1].$D[0];
        return $dateUs;
    }
    //sinon on renvoie tel quel
    else{
        return $d;
    }
}
